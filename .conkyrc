background no
out_to_console yes
out_to_x no
update_interval	  1
#short_units	  yes
#pad_percents	  3

# number of cpu samples to average
# set to 1 to disable averaging
cpu_avg_samples 2

# Add spaces to keep things from moving about?  This only affects certain objects.
# use_spacer should have an argument of left, right, or none
use_spacer left

# Force UTF8? note that UTF8 support required XFT
override_utf8_locale yes

#font
use_xft yes

TEXT
,[

{"full_text": "cpu $acpitempÂ°C [$cpu%] ","color": "\#4eb4fa"},
{"full_text": "memory [$membar] ", "color":"\#ffba68"},
{"full_text": "${exec skb -1}", "color":"\#ff0090"},
{"full_text": "volume ${exec amixer -c 0 get Master | grep Mono: | cut -d " " -f6}", "color":"\#d0d0d0"},

${if_up wlp3s0}
    {"full_text": "${wireless_essid wlp3s0} [${wireless_link_qual_perc wlp3s0}%] ","color":"\#80ff00"},
$else ${if_up enp4s0}
    {"full_text": "enp4s0 ","color":"\#33CC99"},
$endif

{"full_text": "battery [$battery_percent%] ","color":"\#4eb4fa"},
{"full_text": "${time %d %b} ${time %H:%M:%S} "}

]
